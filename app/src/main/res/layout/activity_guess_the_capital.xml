<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#403F4C"
    tools:context=".GuessTheFlagActivity">


    <TextView
        android:id="@+id/textView_cap1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="100dp"
        android:text="@string/guess_the_country_by_it_s_capital"
        android:textColor="#EDEFFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_cap2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="24dp"
        android:text="@string/question_40_256"
        android:textColor="#EDEFFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cap1"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginTop="84dp"
        android:text="@string/kek"
        android:textColor="#EDEFFE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cap1"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_cap1"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/obito_ist_ein_kek"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button

        android:id="@+id/button_cap2"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="296dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/kek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cap3"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="388dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/kek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cap4"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/kek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cap5"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/kek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_cap6"
        android:layout_width="165dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/kek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>